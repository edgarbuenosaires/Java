package tp1.tp3.ej08;

public class EmpSalComision extends Empleado {

	private final static double SALARIO_MIN = 20000;
	private int nroClientes;
	private double montoPorCliente;

	public EmpSalComision(String nombre, String apellido, int anioIngreso, int nroClientes, double montoPorCliente) {
		super(nombre, apellido, anioIngreso);
		this.nroClientes = nroClientes;
		this.montoPorCliente = montoPorCliente;
	}

	@Override
	public double salario() {
		double monto=0;
		if (this.salarioPorClientes()>SALARIO_MIN) {
			monto
		}
		return 0;
	}

	private int salarioPorClientes() {
		return (double) nroClientes) * this.montoPorCliente;
	}

}
